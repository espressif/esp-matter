			{{#template_options category="tick_events"}}
				{{#if (is_lowercase_equal (concatenate ../name ../side) optionLabel)~}}
				sl_zigbee_event_t {{optionCode}}Event{{endpoint_type_identifier ../../endpointTypeId}}; \
				{{/if}}
			{{/template_options}}
		{{/if}}
	{{/user_clusters}}
