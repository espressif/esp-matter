    <item name="a" type="INT8U"/>
    <item name="b" type="BOOLEAN" isNullable="true"/>
    <item name="c" type="SimpleStruct"/>
   </struct>

   <struct name="A">
     <item name="x" type="INT8U"/>
     <item name="b" type="B"/>
     <item name="c" type="C"/>
   </struct>
   <struct name="B">
     <item name="x" type="INT8U"/>
     <item name="d" type="D"/>
   </struct>
   <struct name="C" isFabricScoped="true">
     <item name="x" type="INT8U"/>
   </struct>
   <struct name="D">
     <item name="x" type="INT8U"/>
     <item name="c" type="C" isFabricSensitive="true"/>
   </struct>

  <struct name="Nest">
    <item name="simple1" type="INT8U"/>
    <item name="array" type="INT8U" array="true" isFabricSensitive="true"/>
  </struct>
  <struct name="DoubleNest">
