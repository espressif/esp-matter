{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "sourceMap": true,
    "target": "es2019",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./src-electron",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "incremental": true,
    "paths": {
      "../src-shared/*": ["../src-shared/*"]
    }
  },
  "include": ["./src-electron/**/*"]
}
