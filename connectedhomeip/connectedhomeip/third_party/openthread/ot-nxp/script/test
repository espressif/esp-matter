set -euxo pipefail

readonly OT_BUILDDIR_K32W061="$(pwd)/build_k32w061"
readonly OT_BUILDDIR_JN5189="$(pwd)/build_jn5189"
readonly OT_BUILDDIR_RT1060="$(pwd)/build_rt1060"

main()
{
    export CPPFLAGS="${CPPFLAGS:-} -DNDEBUG"

    rm -rf "$OT_BUILDDIR_K32W061"
    "$(dirname "$0")"/build_k32w061

    rm -rf "$OT_BUILDDIR_JN5189"
    #"$(dirname "$0")"/build_jn5189

    rm -rf "$OT_BUILDDIR_RT1060"
    "$(dirname "$0")"/build_rt1060
}

main "$@"
