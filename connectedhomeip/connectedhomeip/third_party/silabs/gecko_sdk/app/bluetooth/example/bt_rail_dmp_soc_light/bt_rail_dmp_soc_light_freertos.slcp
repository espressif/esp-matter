    value: "1"
  # ------------- RAIL init, Data Format ---------------
  - name: SL_RAIL_UTIL_INIT_DATA_FORMATS_INST0_ENABLE
    value: "1"
  # ------------- RAIL init, Radio Events --------------
  - name: SL_RAIL_UTIL_INIT_EVENTS_INST0_ENABLE
    value: "1"
  - name: SL_RAIL_UTIL_INIT_EVENT_RX_TIMING_DETECT_INST0_ENABLE
    value: "1"
