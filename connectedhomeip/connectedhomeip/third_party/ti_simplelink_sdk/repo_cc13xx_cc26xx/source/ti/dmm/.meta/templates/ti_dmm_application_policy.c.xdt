"use strict";

const module = system.modules["/ti/dmm/dmm"].$static;
const codeGen = system.getScript("/ti/dmm/dmm_code_gen.js");
const lprfCommon = system.getScript("/ti/common/lprf_common.js");

const project = new codeGen.Project(module);

