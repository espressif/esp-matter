%var Boot = xdc.module("ti.sysbios.family.arm.cc26xx.Boot");

#include <ti/devices/DeviceFamily.h>

#include DeviceFamily_constructPath(inc/hw_types.h)

%if (Boot.customerConfig == true) {
/* pull default CCFG from driverlib */
#include DeviceFamily_constructPath(startup_files/ccfg.c)
%}

%if (Program.build.target.$name.match(/ti/)) {
extern Void _c_int00();

Void ResetISR ()
{
    _c_int00();
}
%   }
%else if (Program.build.target.$name.match(/iar/)) {
extern Void __iar_program_start();

Void ResetISR ()
{
    __iar_program_start();
}
%}

/* workaround bug in driverlib */
%if ((Program.build.target.$name.match(/ti/) || Program.build.target.$name.match(/gnu/)) && (Program.build.target.ccOpts.prefix.match(/2_00_01_13905/) || Program.build.target.ccOpts.suffix.match(/2_00_01_13905/))) {
extern void CPUdelay(uint32_t val);
void NOROM_CPUdelay(uint32_t val)
{
    CPUdelay(val);
}
%}
