/*
 *  ======== package.bld ========
 *
 */

var BiosBuild = xdc.loadCapsule("ti/sysbios/Build.xs");

var objList = [
    "Clobber_asm",
    "IntrinsicsSupport_asm",
    "TaskSupport.c",
    "TaskSupport_asm",
    "Hwi.c",
    "Hwi_asm",
    "Hwi_asm_switch",
    "Timer.c",
    "TimestampProvider.c",
    "Power.c"
];

/* generate makefiles */

var trgFilter = {
    field: "$name",
    list: [ "ti.targets.arm.elf.M3",
            "ti.targets.arm.elf.M4",
            "ti.targets.arm.elf.M4F",
          ]
};

/* generate ti target libs */
BiosBuild.buildLibs(objList, undefined, trgFilter, arguments);

/*
 * Gnu Target Libs
 */
var objList = [
    "Clobber_asm_gnu",
    "IntrinsicsSupport_asm_gnu",
    "TaskSupport.c",
    "TaskSupport_asm_gnu",
    "Hwi.c",
    "Hwi_asm_gnu",
    "Hwi_asm_switch_gnu",
    "Timer.c",
    "TimestampProvider.c",
    "Power.c",
];

var trgFilter = {
    field: "$name",
    list: [ "gnu.targets.arm.M3",
            "gnu.targets.arm.M4",
            "gnu.targets.arm.M4F",
            "ti.targets.arm.clang.M3",
            "ti.targets.arm.clang.M4",
            "ti.targets.arm.clang.M4F",
          ]
};

/* generate gnu target libs */
BiosBuild.buildLibs(objList, undefined, trgFilter, arguments);

/*
 * IAR Target Libs
 */
var objList = [
    "Clobber_asm_iar",
    "IntrinsicsSupport_asm_iar",
    "TaskSupport.c",
    "TaskSupport_asm_iar",
    "Hwi.c",
    "Hwi_asm_iar",
    "Hwi_asm_switch_iar",
    "Power.c",
];

var trgFilter = {
    field: "$name",
    list: [ "iar.targets.arm.M3",
            "iar.targets.arm.M4",
            "iar.targets.arm.M4F",
          ]
};

/* generate iar target libs */
BiosBuild.buildLibs(objList, undefined, trgFilter, arguments);

Pkg.otherFiles = [ "package.bld", "linkcmd.xdt", 
                   "Hwi__epilogue.h", "Hwi__prologue.h",
                   "Hwi_smp.c",
                   "Hwi_link.xdt", "doc-files",
                   "Hwi.xml", "Timer.xml" ];

/* include source files in the release package */
Pkg.attrs.exportSrc = true;
Pkg.attrs.exportCfg = true;
